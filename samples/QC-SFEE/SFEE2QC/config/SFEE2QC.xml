		<bean id="QCTransformer" class="com.collabnet.ccf.core.transformer.XsltProcessor">
   <property name="xsltFile" value="C:\madhu-work\CCF\svn\ccf\src\core\trial2\xslts\sfee2qc.xsl"/>
